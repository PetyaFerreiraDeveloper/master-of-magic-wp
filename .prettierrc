{
  "singleQuote": true,
  "trailingComma": "es5",
  "printWidth": 80,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ["*.json", "*.jsonc"],
      "options": {
        "tabWidth": 4,
        "printWidth": 10
      }
    },
    {
      "files": "*.php",
      "options": {
        "parser": "html",
        "embeddedLanguageFormatting": "off"
      }
    }
  ]
}
