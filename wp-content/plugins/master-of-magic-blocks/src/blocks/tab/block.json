{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "master-of-magic-blocks/tab",
    "title": "Tab",
    "category": "master-of-magic-blocks",
    "icon": "media-interactive",
    "description": "A simple tab with title and content.",
    "supports": {
        "interactivity": true,
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true
        },
        "color": {
            "background": true,
            "text": true
        },
        "layout": {
            "allowJustification": true,
            "allowOrientation": true
        },
        "typography": {
            "textAlign": true
        }
    },
    "attributes": {
        "id": {
            "type": "string",
            "default": ""
        },
        "label": {
            "type": "string",
            "default": "Tab"
        }
    },
    "parent": [
        "master-of-magic-blocks/tabs"
    ],
    "usesContext": [
        "master-of-magic-blocks/activeTabId"
    ],
    "textdomain": "master-of-magic-blocks",
    "editorScript": "file:./index.js",
    "render": "file:./render.php",
    "style": "file:./style-index.css"
}
