<?xml version="1.0"?>
<ruleset name="Master of Magic Coding Standards">
    <rule ref="WordPress-Extra" />

    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="master-of-magic-theme"/>
                <element value="master-of-magic-blocks"/>
            </property>
        </properties>
    </rule>

    <!-- Allow short array syntax -->
    <rule ref="Universal.Arrays.DisallowShortArraySyntax.Found">
        <severity>0</severity>
    </rule>

    <!-- Disallow Yoda Conditions check -->
    <rule ref="WordPress">
        <exclude name="WordPress.PHP.YodaConditions" />
    </rule>

    <!-- Ignore missing file comment -->
    <rule ref="Squiz.Commenting.FileComment.Missing">
        <severity>0</severity>
    </rule>

    <!-- Check all PHP files in directory tree by default. -->
    <arg name="extensions" value="php"/>
    
    <!-- Only check specific directories (your theme and plugin) -->
    <file>wp-content/themes/master-of-magic-theme</file>
    <file>wp-content/plugins/master-of-magic-blocks</file>

    <!-- Show sniff codes in all reports -->
    <arg value="sp"/>
    <arg name="colors"/>

    <!-- Still exclude vendor and node_modules within your directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/dist/*</exclude-pattern>
    <exclude-pattern>/public/*</exclude-pattern>
</ruleset>