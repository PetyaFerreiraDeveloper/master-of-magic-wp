{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "name": "Off Black - 950",
                    "slug": "off-black-950",
                    "color": "#1D1E1F"
                },
                {
                    "name": "Primary dark",
                    "slug": "primary-dark",
                    "color": "#1e2a39"
                }
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1376px"
        },
        "spacing": {
            "defaultSpacingSizes": false,
            "spacingSizes": [
                {
                    "name": "Small",
                    "size": "1rem",
                    "slug": "small"
                },
                {
                    "name": "Medium",
                    "size": "1.5rem",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "clamp(1rem, 2.5vw, 2rem)",
                    "slug": "large"
                },
                {
                    "name": "Extra large",
                    "size": "clamp(2rem, 4vw, 4rem);",
                    "slug": "extra-large"
                }
            ]
        },
        "typography": {
            "defaultFontSizes": false,
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "Josefin Sans, sans-serif",
                    "name": "Josefin Sans",
                    "slug": "josefin-sans",
                    "fontFace": [
                        {
                            "fontDisplay": "block",
                            "fontFamily": "Josefin Sans",
                            "fontStyle": "normal",
                            "fontWeight": "100 900",
                            "src": [
                                "file:./assets/fonts/JosefinSans-VariableFont_wght.ttf"
                            ]
                        }
                    ]
                },
                {
                    "fontFamily": "Playfair Display, serif",
                    "name": "Playfair Display",
                    "slug": "playfair-display",
                    "fontFace": [
                        {
                            "fontDisplay": "block",
                            "fontFamily": "Playfair Display",
                            "fontStyle": "normal",
                            "fontWeight": "100 900",
                            "src": [
                                "file:./assets/fonts/PlayfairDisplay-VariableFont_wght.ttf"
                            ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "0.875rem",
                    "fluid": false
                },
                {
                    "name": "Regular",
                    "slug": "regular",
                    "size": "1rem",
                    "fluid": false
                },
                {
                    "name": "Medium",
                    "slug": "medium",
                    "size": "1.25rem",
                    "fluid": false
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "size": "1.5rem",
                    "fluid": false
                },
                {
                    "name": "Extra Large",
                    "slug": "extra-large",
                    "size": "2rem",
                    "fluid": false
                },
                {
                    "name": "2 Extra Large",
                    "slug": "2-extra-large",
                    "size": "clamp(2rem, 4vw, 3.5rem)"
                }
            ]
        },
        "useRootPaddingAwareAlignments": true
    },
    "styles": {
        "spacing": {
            "blockGap": "var:preset|spacing|large",
            "padding": {
                "right": "var:preset|spacing|large",
                "left": "var:preset|spacing|large"
            }
        },
        "typography": {
            "fontFamily": "var:preset|font-family|josefin-sans",
            "fontSize": "var:preset|font-size|regular",
            "lineHeight": "1.5",
            "fontWeight": "400"
        },
        "color": {
            "text": "var:preset|color|off-black-950",
            "background": "var:preset|color|white"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var:preset|font-family|playfair-display",
                    "fontWeight": "300"
                },
                "color": {
                    "text": "var:preset|color|off-black-950"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var:preset|font-size|2-extra-large",
                    "lineHeight": "1.2"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var:preset|font-size|extra-large",
                    "lineHeight": "1.3"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var:preset|font-size|large",
                    "lineHeight": "1.4"
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "page-with-title",
            "title": "Page (with title)",
            "postTypes": [
                "page"
            ]
        }
    ],
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]
}
